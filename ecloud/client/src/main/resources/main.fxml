<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootNode" minWidth="-Infinity" prefWidth="650.0" style="-fx-background-color: #dedede;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ec.client.MainController">
   <MenuBar>
     <menus>
       <Menu mnemonicParsing="false" text="File">
         <items>
           <MenuItem mnemonicParsing="false" text="Close" />
         </items>
       </Menu>
       <Menu mnemonicParsing="false" text="Edit">
         <items>
           <MenuItem mnemonicParsing="false" onAction="#deleteBtn" text="Delete" />
         </items>
       </Menu>
       <Menu mnemonicParsing="false" text="Help">
         <items>
           <MenuItem mnemonicParsing="false" text="About" />
         </items>
       </Menu>
     </menus>
   </MenuBar>
   <BorderPane VBox.vgrow="ALWAYS">
      <center>
         <VBox fx:id="tableFolders" alignment="TOP_CENTER" BorderPane.alignment="CENTER">
            <children>
               <Label contentDisplay="TOP" text="Cloud" textAlignment="CENTER" textFill="#72757c">
                  <font>
                     <Font name="Ebrima Bold" size="14.0" />
                  </font>
                  <VBox.margin>
                     <Insets bottom="10.0" top="10.0" />
                  </VBox.margin>
               </Label>
               <ListView fx:id="filesList_SERVER" style="-fx-background-radius: 0; -fx-border-radius: 0;" VBox.vgrow="ALWAYS">
                  <VBox.margin>
                     <Insets right="10.0" />
                  </VBox.margin>
               </ListView>
            </children>
         </VBox>
      </center>
      <bottom>
         <HBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
            <children>
               <Label text="Server:" textFill="#72757c">
                  <HBox.margin>
                     <Insets right="5.0" />
                  </HBox.margin>
               </Label>
               <Label fx:id="isOnline" text="WAIT" textAlignment="CENTER" textFill="#72757c">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
                  <HBox.margin>
                     <Insets right="5.0" />
                  </HBox.margin>
               </Label>
               <Button alignment="TOP_CENTER" contentDisplay="CENTER" defaultButton="true" focusTraversable="false" graphicTextGap="5.0" minWidth="80.0" mnemonicParsing="false" onAction="#deleteBtn" prefWidth="80.0" style="-fx-background-radius: 0; -fx-background-color: #ff5257;" text="Delete" textAlignment="CENTER" textFill="WHITE" textOverrun="CLIP">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
                  <HBox.margin>
                     <Insets right="5.0" />
                  </HBox.margin>
               </Button>
               <Button alignment="TOP_CENTER" contentDisplay="CENTER" defaultButton="true" focusTraversable="false" graphicTextGap="5.0" minWidth="80.0" mnemonicParsing="false" onAction="#refreshBtn" prefWidth="80.0" style="-fx-background-radius: 0; -fx-background-color: #63ba46;" text="Refresh" textAlignment="CENTER" textFill="WHITE" textOverrun="CLIP">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
                  <HBox.margin>
                     <Insets right="5.0" />
                  </HBox.margin>
               </Button>
               <Button fx:id="dynamic" alignment="TOP_CENTER" focusTraversable="false" minWidth="80.0" mnemonicParsing="false" onAction="#dynamicBtn" prefWidth="80.0" style="-fx-background-color: #1781f9; -fx-background-radius: 0;" text="Dynamic" textAlignment="CENTER" textFill="WHITE">
                  <opaqueInsets>
                     <Insets />
                  </opaqueInsets>
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
                  <HBox.margin>
                     <Insets right="5.0" />
                  </HBox.margin>
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
               </Button>
            </children>
            <BorderPane.margin>
               <Insets top="10.0" />
            </BorderPane.margin>
         </HBox>
      </bottom>
      <right>
         <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
               <VBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
                  <children>
                     <Label contentDisplay="TOP" text="Downloads" textAlignment="CENTER" textFill="#72757c">
                        <font>
                           <Font name="Ebrima Bold" size="14.0" />
                        </font>
                        <VBox.margin>
                           <Insets bottom="10.0" top="10.0" />
                        </VBox.margin>
                     </Label>
                      <ListView fx:id="filesList_CLIENT" maxWidth="-Infinity" minWidth="-Infinity" style="-fx-background-radius: 0; -fx-border-radius: 0;" VBox.vgrow="ALWAYS">
                        <VBox.margin>
                           <Insets />
                        </VBox.margin>
                     </ListView>
                  </children>
               </VBox>
            </children>
         </HBox>
      </right>
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" />
      </VBox.margin>
      <left>
         <VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
            <children>
               <Label contentDisplay="TOP" text="Cloud  folders" textAlignment="CENTER" textFill="#72757c">
                  <font>
                     <Font name="Ebrima Bold" size="14.0" />
                  </font>
                  <VBox.margin>
                     <Insets bottom="10.0" top="10.0" />
                  </VBox.margin>
               </Label>
               <ListView fx:id="folders" focusTraversable="false" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="150.0" VBox.vgrow="ALWAYS">
                  <VBox.margin>
                     <Insets right="10.0" />
                  </VBox.margin>
               </ListView>
            </children>
         </VBox>
      </left>
   </BorderPane>
</VBox>
